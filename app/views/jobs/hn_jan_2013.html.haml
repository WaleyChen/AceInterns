- content_for :jobs do
  #results.span12
    %h2= link_to "Ask HN: Who is hiring? (January 2013)", 'http://news.ycombinator.com/item?id=4992617'
    %table.table.table-hover
      %thead
        %tr
          %th#title= link_to 'Title', params.merge({ :sort => 'title' })
          %th#company= link_to 'Company', params.merge({ :sort => 'company' })
          %th#location= link_to 'Location', params.merge({ :sort => 'location' })
          %th#location= link_to 'Apply', params.merge({ :sort => 'apply' })
      %tbody
      - @jobs.each do |job|
        - apply_link = job.apply_link.is_a?(Hash) ? mail_to(job.apply_link["email"], 'Email') : link_to('Apply', job.apply_link)
        %tr{ :href => apply_link }
          %td.desc= job.title
          - # %span.badge.badge-info= 'Javascript'
          - # %span.badge.badge-info= 'MongoDB'
          - # %span.badge.badge-info= 'Rails'
          %td= job.company.name if job.company.present?
          %td= "#{ job.city }, #{ job.state }, #{ job.country }" 
          %td= apply_link